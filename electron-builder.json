{
  "appId": "com.backtesting.app",
  "productName": "Backtesting Toolkit",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "public/favicon.ico"
  }
}